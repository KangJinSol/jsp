<script>
	function insert_major(obj){
		$("#btn_register").click(function() {
			var data = "Major_List";
		});
		$.ajax({
			url : "register.do",
			data : data,
			method:"get",
			success:function(result){
				result = Number(result);
				if(result == 1){
					alert("학과정보 등록 성공");
					location.href="refresh.do";
				}else{
					alert("학과정보 등록 실패 입력한 데이터를 확인하세요");
				}
			}
		}); 
	});
}
</script>
